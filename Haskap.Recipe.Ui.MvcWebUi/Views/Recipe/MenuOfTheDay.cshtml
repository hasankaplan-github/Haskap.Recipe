@model MenuOfTheDayOutputDto

@{
    Layout = "_PublicLayout";
}

<!-- ##### Breadcumb Area Start ##### -->
<div class="breadcumb-area bg-img bg-overlay" style="background-image: url(/lib/public/delicious/img/bg-img/breadcumb4.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcumb-text text-center">
                    <h2>Günün Menüsü</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Breadcumb Area End ##### -->


<!-- ##### Best Receipe Area Start ##### -->
<section class="best-receipe-area">
    <div class="container">

        @if (Model.BreakfastRecipe is not null)
        {
            <div class="row">
                <div class="col-12">
                    <div class="section-heading">
                        <h3>Kahvaltılık</h3>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Single Best Receipe Area -->
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="single-best-receipe-area mb-30">
                        <a asp-action="Detail" asp-route-slug="@Model.BreakfastRecipe.Slug.Value">
                            <img src="@Html.Raw($"/{ViewBag.BaseFolderPath}/{Model.BreakfastRecipe.Id}/{Model.BreakfastRecipe.Picture.NewName}{Model.BreakfastRecipe.Picture.Extension}")" alt="">
                            <div class="receipe-content">
                                <h5>@Model.BreakfastRecipe.Name</h5>

                                <div class="ratings">
                                    @{
                                        int i = 0;
                                    }
                                    @for (i = 0; i < Model.BreakfastRecipe.Rating; i++)
                                    {
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    }

                                    @for (; i < 5; i++)
                                    {
                                        <i class="fa fa-star-o" aria-hidden="true"></i>
                                    }
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        }

